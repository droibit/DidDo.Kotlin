<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:fab="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="8"
              tools:context=".ItemDetailFragment">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="3"
                  android:background="@color/primary_100"
                  android:gravity="center"
                  android:orientation="vertical">

        <TextView android:id="@+id/elapsed_date"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/app_name"
                  android:textColor="@color/accent"
                  android:textSize="@dimen/text_size_xxxxlarge" />

        <TextView android:id="@+id/date"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8dp"
                  android:text="@string/app_name"
                  android:textColor="@color/accent"
                  android:textSize="@dimen/text_size_xlarge" />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="5"
                  android:orientation="horizontal">

        <com.melnykov.fab.FloatingActionButton android:id="@+id/fab"
                                               android:layout_width="wrap_content"
                                               android:layout_height="wrap_content"
                                               android:layout_margin="@dimen/floating_action_margin"
                                               android:src="@drawable/ic_action_activity"
                                               fab:fab_type="mini"
                                               fab:fab_shadow="false"
                                               fab:fab_colorNormal="@color/primary"
                                               fab:fab_colorPressed="@color/primary_pressed"
                                               fab:fab_colorRipple="@color/primary_100" />

        <ListView android:id="@android:id/list"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/side_margin"
                  android:visibility="visible"
                  android:layout_marginRight="@dimen/side_margin" />

        <TextView android:id="@android:id/empty"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:text="@string/empty_activity"
                  android:textSize="@dimen/text_size_xlarge"
                  android:visibility="gone" />

        </LinearLayout>

</LinearLayout>